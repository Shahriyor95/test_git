@model IEnumerable<IdentityRole>


<br />
<h3>Все роли</h3>

<div class="card">
    <div class="card-body">
        <table class="table table-sm table-bordered">

            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Обновить</th>
                <!--<th>Удалить</th>-->
            </tr>


            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Обновить</a></td>
                    <!--<td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>-->


                </tr>
            }
        </table>
    </div>
</div>
