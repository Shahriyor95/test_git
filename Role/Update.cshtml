@model RoleEdit
   

        <h1>Update Role</h1>
        <form method="post">

            <input type="hidden" name="roleName" value="@Model.Role.Name" />
            <input type="hidden" name="roleId" value="@Model.Role.Id" />
            
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="font-weight: bold;">Add To @Model.Role.Name</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered table-striped" id="example3">
                            <thead>
                                <tr>
                                    <th>Users</th>
                                    <th>Checking</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.NonMembers.Count() == 0)
                                {
                                    <tr><td colspan="2">All Users Are Members</td></tr>
                                }
                                else
                                {
                                    @foreach (UserModel user in Model.NonMembers)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td>
                                                <input type="checkbox" name="AddIds" value="@user.Id">
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            
            
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="font-weight: bold;">Remove From @Model.Role.Name</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered table-striped" id="example4">
                            <thead>
                                <tr>
                                    <th>Users</th>
                                    <th>Checking</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Members.Count() == 0)
                                {
                                    <tr><td colspan="2">No Users Are Members</td></tr>
                                }
                                else
                                {
                                    @foreach (UserModel user in Model.Members)
                                    {
                                        <tr>
                                            <td>@user.UserName</td>
                                            <td>
                                                <input type="checkbox" name="DeleteIds" value="@user.Id">
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>

                    </div>
                    <!-- /.card-body -->
                </div>
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="btn-group">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </form>